<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">
    <!-- 日志输出格式 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId}] %logger{50} - %msg%n" />

    <!-- 日志文件路径 -->
    <property name="LOG_FILE_PATH" value="${LOG_FILE:-logs/app.log}" />

    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 文件输出（滚动策略） -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 日志文件路径 -->
        <file>${LOG_FILE_PATH}</file>

        <!-- 滚动策略：按时间和大小分割 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 滚动后的文件名格式（按天分割，保留30天） -->
            <fileNamePattern>logs/app.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>30</maxHistory>

            <!-- 按大小分割（每个文件最大100MB） -->
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>

        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 多环境配置（开发环境） -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />  <!-- 开发环境只输出到控制台 -->
            <appender-ref ref="FILE" />
        </root>
    </springProfile>

    <!-- 多环境配置（生产环境） -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />  <!-- 生产环境同时输出到控制台和文件 -->
            <appender-ref ref="FILE" />
        </root>
    </springProfile>
</configuration>
